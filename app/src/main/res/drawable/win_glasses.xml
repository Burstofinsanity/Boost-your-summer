<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:layout_width="wrap_content"
            android:width="120dp"
            android:height="120dp"
            android:shape="oval">
            <solid android:color="#009ead" />
            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>
    <item
        android:width="100dp"
        android:height="50dp"
        android:gravity="center">
        <bitmap android:src="@drawable/glasses"/>
    </item>
</layer-list>